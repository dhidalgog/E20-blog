<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
            <%= link_to 'Change role', role_path(user),method: :patch, class: 'btn btn-sm btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>